<%= provide(:title, 'Edit user') %>
<h1>Update your profile</h1>
<div class="row">
    <div class="span6 offset3">
          <%= form_for(@user) do |f| %>
            <%= render 'layouts/fields', f: f %>
            <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>
          <% end %>

          <%= gravatar_for @user %>
          <a href="http://gravatar.com/emails">change</a>
    </div>
</div>